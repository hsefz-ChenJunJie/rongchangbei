# AI对话应用后端环境变量配置示例
# 复制此文件为 .env 并根据您的环境进行配置

# 基础应用配置
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# OpenRouter LLM服务配置
# 获取API密钥: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Vosk STT服务配置
USE_REAL_VOSK=false
VOSK_MODEL_PATH=model/vosk-model
VOSK_SAMPLE_RATE=16000

# 跨域配置（生产环境应该限制为具体域名）
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 日志配置
LOG_FILE=logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# 性能配置
MAX_WORKERS=4
TIMEOUT=60

# 安全配置（生产环境使用）
# SECRET_KEY=your_secret_key_here
# HTTPS_ONLY=true